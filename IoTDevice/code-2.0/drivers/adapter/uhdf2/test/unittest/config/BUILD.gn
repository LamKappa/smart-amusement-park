import("//build/test.gni")
import("//drivers/adapter/uhdf2/uhdf.gni")

module_output_path = "hdf/config"
ohos_unittest("hdf_adapter_uhdf_test_config") {
  module_out_path = module_output_path
  include_dirs = [ "//drivers/framework/test/unittest/include" ]

  sources = [ "//drivers/framework/ability/config/test/unittest/common/hdf_config_test.cpp" ]
  cflags = [
    "-Wall",
    "-Wextra",
    "-Werror",
    "-fsigned-char",
    "-fno-common",
    "-fno-strict-aliasing",
  ]
  deps = [
    "$hdf_uhdf_path/osal:libhdf_utils",
    "$hdf_uhdf_path/test/unittest/common:libhdf_test_common",
    "//utils/native/base:utils",
  ]
  if (is_standard_system) {
    external_deps = [ "hiviewdfx_hilog_native:libhilog" ]
  } else {
    external_deps = [ "hilog:libhilog" ]
  }
}
