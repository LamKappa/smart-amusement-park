import("//build/test.gni")

module_output_path = "hisysevent_native/hisysevent_native"

config("hisysevent_test_config") {
  visibility = [ ":*" ]

  include_dirs = [ "." ]
}

ohos_moduletest("HiSysEventTest") {
  module_out_path = module_output_path

  sources = [ "hisysevent_test.cpp" ]

  configs = [ ":hisysevent_test_config" ]

  deps = [
    "//third_party/googletest:gtest_main",
    "//utils/native/base:utils",
  ]

  if (is_standard_system) {
    external_deps = [
      "hisysevent_native:libhisysevent",
      "hiviewdfx_hilog_native:libhilog",
    ]
  } else {
    external_deps = [
      "hilog:libhilog",
      "hisysevent_native:libhisysevent",
      "hitrace:libhitrace",
    ]
    cflags_cc = [ "-D__HIVIEW_HAVE_HITRACE__" ]
  }
}

group("moduletest") {
  testonly = true
  deps = []

  deps += [ ":HiSysEventTest" ]
}
