import("//build/test.gni")

ohos_unittest("windows_manager_test") {
  module_out_path = "graphic_standard/wm"
  sources = [ "windows_manager_test.cpp" ]
  include_dirs = [ "//utils/system/safwk/native/include" ]
  configs = [
    "//foundation/graphic/standard/frameworks/wm:wms_client_config",
    "//foundation/graphic/standard/frameworks/wm:wms_client_public_config",
  ]
  deps = [
    "//foundation/graphic/standard:libsurface",
    "//foundation/graphic/standard/frameworks/wm:wms_client",
    "//foundation/graphic/standard/prebuilts/librarys/display_gralloc:libdisplay_gralloc",
  ]
  external_deps = [ "ipc:ipc_core" ]
  cflags = []
  if (target_cpu == "arm") {
    cflags += [ "-DBINDER_IPC_32BIT" ]
  }
}

group("test") {
  testonly = true

  deps = [ ":windows_manager_test" ]
}
